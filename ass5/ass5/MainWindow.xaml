                     Canvas.Left="331"
                     Canvas.Top="153"
                     Width="81"
                     Height="22" />
            <TextBox Name="phone_text"
                     Canvas.Left="331"
                     Canvas.Top="185"
                     Width="81"
                     Height="22" />
            <TextBox Name="address_text"
                     Canvas.Left="331"
                     Canvas.Top="212"
                     Width="81"
                     Height="22" />
            <TextBox Name="email_text"
                     Canvas.Left="331"
                     Canvas.Top="239"
                     Width="81"
                     Height="22" />
            <CheckBox Name="teacher"
                      Canvas.Left="348"
                      Canvas.Top="277"
                      Checked="teacher_Checked"
                      Content="Teacher?"
                      Unchecked="teacher_Unchecked" />
            <TextBox Name="lName_text"
                     Canvas.Left="401"
                     Canvas.Top="131"
                     Width="64"
                     Height="22" />
        </Canvas>
    </Grid>
</Window>
